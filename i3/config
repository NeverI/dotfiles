# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Shift+h resize grow width 10 px or 10 ppt
        bindsym Shift+k resize grow height 10 px or 10 ppt
        bindsym Shift+j resize shrink height 10 px or 10 ppt
        bindsym Shift+l resize shrink width 10 px or 10 ppt

        bindsym h resize grow width 1 px or 1 ppt
        bindsym k resize grow height 1 px or 1 ppt
        bindsym j resize shrink height 1 px or 1 ppt
        bindsym l resize shrink width 1 px or 1 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

exec --no-startup-id feh --no-fehbg --bg-fill ~/Képek/background.png
set $i3lockwall i3lock -i ~/Képek/background.png -tufd -I 5
#set $i3lockwall i3lock -i $backgroundImag" -t -u -f -d -I 10

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Ctrl+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $i3lockwall, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $i3lockwall && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $i3lockwall && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym Ctrl+$mod+BackSpace mode "$mode_system"
bindsym $mod+BackSpace exec --no-startup-id $i3lockwall
bindcode 253 exec --no-startup-id $i3lockwall

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
